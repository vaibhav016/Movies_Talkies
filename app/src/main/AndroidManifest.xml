<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rahulgoel.moviesdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Movie_Detail.Top_Rated" />
        <activity android:name=".Movie_Detail.Popular" />
        <activity android:name=".Movie_Detail.NowPlaying" />
        <activity android:name=".Movie_Detail.Upcoming" />
        <activity
            android:name=".Movie_Detail.DetailedMovie"
            android:label="@string/title_activity_detailed_movie"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Movie_Detail.searchResult"></activity>
    </application>

</manifest>
